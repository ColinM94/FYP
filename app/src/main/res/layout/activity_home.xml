<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.colinmaher.carersapp.HomeActivity">

    <TextView
        android:id="@+id/textview_home_loginmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="You are logged in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_home_logout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_home_loginmessage" app:layout_constraintEnd_toEndOf="@+id/textview_home_loginmessage"
            app:layout_constraintStart_toStartOf="@+id/textview_home_loginmessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>