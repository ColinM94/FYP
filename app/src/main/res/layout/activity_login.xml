<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@android:color/holo_blue_dark">
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="textEmailAddress"
        android:hint="@string/register_email"
        android:ems="10"
        android:id="@+id/editText_login_email"
        android:background="@drawable/rounded_edittext_register_login"
        android:autofillHints="" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textPassword"
            android:hint="@string/register_password"
            android:ems="10"
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_login_email"
            app:layout_constraintStart_toStartOf="@+id/editText_login_email"
            app:layout_constraintEnd_toEndOf="@+id/editText_login_email" android:autofillHints=""
            android:id="@+id/editText_login_password"/>

    <Button
            android:text="@string/login_loginBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_login_loginBtn"
            android:background="@drawable/rounded_button_register_login"
            app:layout_constraintEnd_toEndOf="@+id/editText_login_password"
            app:layout_constraintStart_toStartOf="@+id/editText_login_password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_login_password" android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"/>

    <TextView
        android:id="@+id/textView_login_noAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:text="@string/login_noAccount"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/button_login_loginBtn"
        app:layout_constraintStart_toStartOf="@+id/button_login_loginBtn"
        app:layout_constraintTop_toBottomOf="@+id/button_login_loginBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>